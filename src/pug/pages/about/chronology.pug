section.section.chronology
  .chronology__site-container
    .chronology__nav-wrapper
      .chronology__nav
        each item in chronos
          button.chronology__nav-btn.tab-btn(type="button", data-chrono=item.data)=item.text

    .chronology__list-wrapper
      ul.chronology__list._collapsed
        each item in chronologyItems
          li.chronology__item(class=item.class)
            .chronology__item-info
              p.chronology__item-title=item.title
              p.chronology__item-text=item.text
            if item.withPhoto
              .chronology__item-photo
                +picture(item.photo)
            else
              .chronology__item-image
                +picture(item.img)

