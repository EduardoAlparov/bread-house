-
  const menu = [
    {
      text: "Инвестиции",
      href: "#"
    },
    {
      text: "Онлайн экскурсия",
      href: "#"
    },
    {
      text: "Партнеры",
      href: "#"
    },
    {
      text: "Блог",
      href: "#"
    },
  ];

header.page-header(class= greyHeader ? 'page-header--grey' : '')
  a.page-header__promo.js-header-promo(href="#")
    p.page-header__promo-text.page-header__promo-title Скидка на обучение
    .page-header__promo-divider
    p.page-header__promo-text.page-header__promo-value 30%
    .page-header__promo-divider
    p.page-header__promo-text.page-header__promo-date до 10.06

  nav.page-header__site-container
    a.page-header__logo.logo(href="/")
      +icon-multi('logo')

      if logoTooltip
        span.logo__tooltip= logoTooltip

    ul.page-header__menu.menu
      each item in menu
        li.menu__item
          a.menu__link(href=item.href)=item.text

    .page-header__mobile-buttons
      a.page-header__phone.simple-btn(href="#")
        +icon-multi('phone')
      a.page-header__burger.simple-btn.js-mobile-menu-open(href="#")
        +icon-multi('burger')
        +icon-multi('burger-close')

    ul.page-header__mobile-menu.show-on-mobile
      li.page-header__link-item
        a.page-header__mobile-link(href="#") Инвестиции
      li.page-header__link-item
        a.page-header__mobile-link(href="#") Онлайн экскурсия
      li.page-header__link-item
        a.page-header__mobile-link(href="#") Партнеры
      li.page-header__link-item
        a.page-header__mobile-link(href="#") Блог
